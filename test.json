{
    "$jason": {
        "head": {
            "title": {
                "type": "label",
                "text": "На Базар"
            },
            "actions": {
                "$load": {
                    "type": "$network.request",
                    "options": {
                        "url": "https://be.nabazar.net/api/v1/bazar/lot/"
                    },
                    "success": {
                        "type": "$render"
                    }
                }
            },
            "templates": {
                "body": {
                    "sections": [
                        {
                            "items": {
                                "{{#each $jason.content}}": {
                                    "type": "vertical",
                                    "components": [
                                        {
                                            "type": "label",
                                            "text": "This is row {{name}}",
                                            "style": {
                                                "font": "Avenir",
                                                "size": "30",
                                                "color": "rgb(200,0,0)",
                                                "padding": "10"
                                            }
                                        },
                                        {
                                            "type": "label",
                                            "text": "{{description}}"
                                        },
                                        {
                                            "type": "image",
                                            "url": [
                                                {
                                                    "{{#if images[0]}}": "https://static.nabazar.net/images/small/lot/{{images[0]}}"
                                                }
                                            ],
                                            "style": {
                                                "width": "300",
                                                "height": "300",
                                                "corner_radius": "20",
                                                "bottom": "100",
                                                "right": "100"
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}
