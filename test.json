{
  "$jason": {
    "head": {
      "title": {
        "type": "label",
        "text": "На Базар"
      },
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "https://be.nabazar.net/api/v1/bazar/lot/"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "sections": [{
            "items": {
              "{{#each $jason.content}}": {
              "type": "vertical",
                  "components": [{
                "type": "label",
                "text": "This is row {{name}}"
              },
              {
                "type": "label",
                "text": "{{description}}"
              }
              ]
            }
            }
          }]
        }
      }
    }
  }
}
